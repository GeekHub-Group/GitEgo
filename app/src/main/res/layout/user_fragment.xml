<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <Space
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      />

  <ImageView
      android:id="@+id/avatar"
      android:layout_width="@dimen/avatar_width"
      android:layout_height="@dimen/avatar_height"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/avatar_marginTop"
      android:scaleType="fitXY"
      />

  <TextView
      android:id="@+id/userLogin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textAppearance="?android:attr/textAppearanceSmall"
      tools:text="userLogin"
      />

  <TextView
      android:id="@+id/userName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/user_default"
      android:textAppearance="?android:attr/textAppearanceLarge"
      tools:text="userName"
      />

  <TextView
      android:id="@+id/followers"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/user_default"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:textColor="@color/textHighlighted"
      tools:text="followers"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_margin="@dimen/default_marginDouble"
      android:orientation="horizontal"
      >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/watchersCount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="@string/user_default"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textColor="@color/textHighlighted"
          tools:text="-"
          />

      <TextView
          android:id="@+id/watchers"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="@string/user_watchers"
          android:textAllCaps="true"
          android:textAppearance="?android:attr/textAppearanceSmall"
          tools:text="watchers"
          />
    </LinearLayout>

    <Space
        android:layout_width="@dimen/default_marginDouble"
        android:layout_height="0dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/starsGazersCount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="@string/user_default"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textColor="@color/textHighlighted"
          tools:text="-"
          />

      <TextView
          android:id="@+id/starsGazers"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="@string/user_starsGazers"
          android:textAllCaps="true"
          android:textAppearance="?android:attr/textAppearanceSmall"
          tools:text="watchers"
          />
    </LinearLayout>

    <Space
        android:layout_width="@dimen/default_marginDouble"
        android:layout_height="0dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/forksCount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="@string/user_default"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textColor="@color/textHighlighted"
          tools:text="-"
          />

      <TextView
          android:id="@+id/forks"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="@string/user_forks"
          android:textAllCaps="true"
          android:textAppearance="?android:attr/textAppearanceSmall"
          tools:text="watchers"
          />
    </LinearLayout>

  </LinearLayout>

</LinearLayout>